{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "noImplicitAny": true,
    "outDir": "./dist",
    "sourceMap": false,
    "types": [],
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "allowJs": false,
    "moduleResolution": "node",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "rootDir": "./src",
    "baseUrl": ".",
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}